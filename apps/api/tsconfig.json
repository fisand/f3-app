{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationMap": false,
    "declaration": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tsdown.config.ts"
  ]
}
